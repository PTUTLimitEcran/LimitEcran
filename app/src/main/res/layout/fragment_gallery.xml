<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".GalleryFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:text="@string/filterByGallery" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="195dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="62dp" android:id="@+id/filterBy"
                android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/dailyTreeListRecyclerView"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/dailyTreeListRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/filterBy"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="70dp"/>
        <TextView
                android:text="@string/dateFilter"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:id="@+id/dateFilterTextView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="62dp" android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toTopOf="@+id/dailyTreeListRecyclerView"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/filterBy"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="@string/height"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/treeSizeFilter" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="31dp"
                app:layout_constraintStart_toEndOf="@+id/dateFilterTextView" android:layout_marginTop="62dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toTopOf="@+id/dailyTreeListRecyclerView"
                app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.0"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>