<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".TreeFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="334dp"
                android:layout_height="40dp"
                android:id="@+id/currentChronometerTime"
                android:gravity="center"
                android:textColor="@color/textColorChronometer"
                android:background="@drawable/layout_bg"
                android:text="@string/defaultCurrentChronometerValue" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                android:layout_marginTop="6dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="465dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/defaultWeeklyChronometerValue"
                android:layout_width="279dp"
                android:gravity="center"
                android:background="@drawable/layout_bg"
                android:textColor="@color/textColorChronometer"
                android:layout_height="27dp" android:id="@+id/weeklyTimerCounter"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="426dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/currentChronometerTime"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TREE"/>

</FrameLayout>