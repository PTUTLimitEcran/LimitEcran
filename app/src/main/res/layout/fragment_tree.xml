<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TreeFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Chronometer
                android:id="@+id/chronometerXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/currentChronometerTime"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:background="@drawable/layout_bg"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"
            android:text="@string/defaultCurrentChronometerValue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
            android:id="@+id/weeklyTimerCounter"
            android:text="@string/defaultWeeklyChronometerValue"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:background="@drawable/layout_bg"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentChronometerTime"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ScrollView
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="62dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/weeklyTimerCounter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:id="@+id/sketch_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

            </FrameLayout>

        </ScrollView>
        <Button
                android:id="@+id/button_save"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="68dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.939"/>
                android:textColor="@color/textColorChronometer"
                android:layout_height="27dp" android:id="@+id/weeklyTimerCounter"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="426dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/currentChronometerTime"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TREE"
            android:visibility="gone"/>

</FrameLayout>