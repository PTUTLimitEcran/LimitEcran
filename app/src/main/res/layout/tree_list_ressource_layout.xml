<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="77dp"
            android:layout_height="18dp"
            android:height="10dp"
            android:id="@+id/treeListDate" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="301dp"
            tools:text="@string/defaultTreeDateValue"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/treeListDate" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/treeListRecyclerView"/>
</android.support.constraint.ConstraintLayout>