<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/title"
            android:text="@string/newChallengeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

        <Button
                android:id="@+id/challenge1"
                android:text="@string/Min15Challenge"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:textColor="@color/textColor"
                android:background="@drawable/button_bg"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge2"
                app:layout_constraintBottom_toTopOf="@id/challenge3"/>

        <Button
                android:id="@+id/challenge2"
                android:text="@string/Min30Challenge"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:textColor="@color/textColor"
                android:background="@drawable/button_bg"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/challenge1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/challenge1"/>

        <Button
                android:id="@+id/challenge3"
                android:text="@string/Hour1Challenge"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:textColor="@color/textColor"
                android:background="@drawable/button_bg"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="88dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/challenge1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge4"/>

        <Button
                android:id="@+id/challenge4"
                android:text="@string/Hours2Challenge"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:textColor="@color/textColor"
                android:background="@drawable/button_bg"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/challenge1"
                app:layout_constraintStart_toEndOf="@id/challenge3"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>