<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="64dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="277dp"
            android:layout_height="60dp" android:layout_weight="1">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_phonelink_erase_black_24dp"
                android:id="@+id/notificationIcon"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:layout_height="match_parent" android:id="@+id/textView"
                android:layout_marginStart="4dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="@string/defaultCurrentChronometerValue"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent" android:id="@+id/smallNotificationChrono"/>
    </LinearLayout>
</LinearLayout>